{% extends 'EnsJobeetBundle::layout.html.twig' %}

{% block content %}
    <h1>Task</h1>

    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ entity.status }}</td>
            </tr>
            <tr>
                <th>Due_date</th>
                <td>{{ entity.duedate|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <div class="btn-group">

    <li>
        <a href="{{ path('ens_task_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <a href="{{ path('ens_task') }}">
            Back to the list
        </a>
    </li>    

</div>
{% endblock %}
